<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivitysSecond.InfDetailsMunicipio">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linearCabecalho"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:background="@drawable/gradiente_layout_border"
        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informações Detalhadas"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:textStyle="bold|italic">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nomecitydetail"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"
                android:textStyle="bold|italic"
                >

            </TextView>

            <TextView
                android:id="@+id/populacaoCidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:textStyle="bold|italic"></TextView>

        </LinearLayout>


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="100dp"
            app:srcCompat="@mipmap/iconedois" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearCabecalho"
        android:id="@+id/relativeLayoutx"
        >

        <TextView
            android:id="@+id/descriptionDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:typeface="serif"
            app:fontFamily="serif-monospace" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayoutx"
        android:orientation="horizontal"

        >

        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:id="@+id/scroll_viewInformacoes"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/infrelevantedetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="25dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="serif"
                    app:fontFamily="serif-monospace" />
            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/fonte_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scroll_viewInformacoes"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="15dp"
            android:textSize="14sp"
            android:textStyle="bold|italic"
            android:typeface="serif"
            app:fontFamily="serif-monospace" />


        <android.support.v7.widget.CardView
            android:id="@+id/btn_acessar"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="27dp"
            app:cardBackgroundColor="#3CB371"
            app:cardCornerRadius="17dp"
            android:elevation="4dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_acessar"
                android:layout_centerInParent="true"
                android:textColor="#fff"
                android:textSize="18sp"
                />
            </RelativeLayout>

        </android.support.v7.widget.CardView>


    </RelativeLayout>


</RelativeLayout>