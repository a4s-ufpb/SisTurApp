<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Fragments.FragmentInfCidade">


        <android.support.v7.widget.CardView
            android:id="@+id/card"
            android:layout_width="300dp"
            android:layout_height="165dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="39dp"
            android:background="#ffffff"
            android:shape="ring"
            app:cardCornerRadius="27dp">
                >

                <com.daimajia.slider.library.SliderLayout
                    android:id="@+id/slidercidade"
                    android:layout_width="288dp"
                    android:layout_height="144dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="46dp">

                </com.daimajia.slider.library.SliderLayout>
        </android.support.v7.widget.CardView>


        <TextView
            android:id="@+id/nomeCidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_below="@id/card"
            android:layout_marginTop="214dp"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descricaoCidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nomeCidade"
            android:textSize="14sp"
            android:textStyle="bold|italic"
            android:typeface="sans" />

        <TextView
            android:id="@+id/populacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/descricaoCidade"
            android:textSize="14sp"
            android:textStyle="bold|italic"
            android:typeface="sans" />

        <TextView
            android:id="@+id/areaTerritorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/populacao"
            android:textSize="14sp"
            android:textStyle="bold|italic"
            android:typeface="sans" />


</RelativeLayout>