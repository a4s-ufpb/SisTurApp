<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="300dp"
    tools:context=".ActivitysSecond.ActivityInf"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5sp"
        android:id="@+id/linearprimeiro"
        >

        <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="200dp"
        android:layout_height="87dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        android:shape="ring"
        app:cardCornerRadius="27dp"
        android:layout_marginTop="16dp"
        >


        <ImageView
            android:id="@+id/fotocidade"
            android:layout_width="200dp"
            android:layout_height="87dp"
            >

        </ImageView>
    </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linearprimeiro"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/nomeCidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/descricaoCidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nomeCidade"
                android:textSize="14sp"
                android:textStyle="bold|italic"
                android:typeface="sans" />

            <TextView
                android:id="@+id/populacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/descricaoCidade"
                android:textSize="14sp"
                android:textStyle="bold|italic"
                android:typeface="sans" />

            <TextView
                android:id="@+id/areaTerritorial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/populacao"
                android:textSize="14sp"
                android:textStyle="bold|italic"
                android:typeface="sans" />

            <TextView
                android:id="@+id/informacoesRelevante"
                android:layout_below="@+id/areaTerritorial"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold|italic"
                android:typeface="sans"
                />
        </LinearLayout>




    </LinearLayout>

    </RelativeLayout>


